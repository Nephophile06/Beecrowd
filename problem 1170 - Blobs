#include <stdio.h>

int main()
{
    int T; 
    scanf("%d", &T);
    int count;
    float X;

    for (int i = 0; i < T; i++)
    {
        scanf("%f", &X);
        count = 0;
        while (X > 1)
        {
            count++;
            X = X / 2;
        }

        printf("%d dias\n", count);
    }

    return 0;
}
