#include <stdio.h>
int main() 
{
    float A, B, C, Perimetro, Area;
    scanf("%f %f %f", &A, &B, &C);
    if ( (A+B)>C && (B+C)>A && (C+A)>B )
    {
        Perimetro = (A+B+C);
        printf("Perimetro = %.1f\n", Perimetro);
    }
    else
    {
        Area = 1.0/2.0 * (A+B) * C;
        printf("Area = %.1f\n", Area);
    }
    return 0;
}
